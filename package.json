{
  "name": "angular2-skeleton",
  "version": "1.0.0",
  "description": "Skeleton with Angular 2 with TypeScript compiling, Bootstrap 4, SASS Compiling",
  "scripts": {
    "clean": "rimraf ./build && mkdir build",
    "compile": "concurrently 'npm run lint' 'npm run tsc' 'npm run sass'",
    "watch": "concurrently --kill-others 'npm run tsc:w' 'npm run sass:w' 'npm run resources:w'",
    "prebuild": "npm run clean",
    "build": "concurrently 'npm run tsc' 'npm run sass' 'npm run resources' 'npm run libs'",
    "resources": "node .bin/resources",
    "resources:w": "node .bin/resources --watch",
    "libs": "node .bin/libs",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "sass": "sass --update src:build",
    "sass:w": "sass --watch src:build",
    "server": "lite-server",
    "lint": "node_modules/.bin/tslint -c tslint.json 'src/**/*.ts'",
    "security-check": "nsp check",
    "test": "",
    "test:w": "",
    "start": "concurrently 'npm run security-check' 'npm run build' 'npm run watch' 'npm run server'",
    "postinstall": "typings install"
  },
  "author": "Francisco Costa <jfcpcosta@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@angular/common": "~2.4.5",
    "@angular/compiler": "~2.4.5",
    "@angular/core": "~2.4.5",
    "@angular/forms": "~2.4.5",
    "@angular/http": "~2.4.5",
    "@angular/platform-browser": "~2.4.5",
    "@angular/platform-browser-dynamic": "~2.4.5",
    "@angular/router": "~3.4.5",
    "angular-in-memory-web-api": "~0.2.4",
    "bootstrap": "^4.0.0-alpha.6",
    "core-js": "^2.4.1",
    "jquery": "^3.1.1",
    "reflect-metadata": "^0.1.9",
    "rxjs": "^5.0.3",
    "systemjs": "^0.20.2",
    "tether": "^1.4.0",
    "zone.js": "^0.7.6"
  },
  "devDependencies": {
    "chalk": "^1.1.3",
    "chokidar": "^1.6.1",
    "concurrently": "^3.1.0",
    "lite-server": "^2.2.2",
    "ts-node": "^2.0.0",
    "tslint": "^4.4.2",
    "typescript": "^2.1.5",
    "typings": "^2.1.0",
    "vinyl-fs": "^2.4.4"
  }
}
